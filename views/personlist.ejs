<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QR Test - Seznam oseb</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/personlist.css' />
    <link rel='stylesheet' href='/stylesheets/buttons.css' />
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <div class="personlistMainContainer">
      <br />
      <h1>Seznam oseb</h1>
      <br />
      <p>Seznam vseh oseb vnešenih v aplikacijo.</p>
      <br />
      <div class="usersContainer">
      <% users.forEach(user => { %>
        <div class="userContainer">
          <div class="textContainer1">
            <h3 class="username userFirstname"><%= user.firstname + " " + user.lastname %> </h3>
          </div>
          <div class="textContainer2">
            <form method="get" action="/personlist/getpersoncard/<%=user.id%>">
              <button type="submit" class="moreButton" style="margin-right: 10px">Kartica</button>
            </form>

            <form method="get" action="/personlist/getqrcode/<%=user.id%>">
              <button type="submit" class="moreButton">Več</button>
            </form>
          </div>
        </div>
        <br />
      <% }) %>
      </div>
        <button class="moreButton back">Nazaj</button>
    </div>
    <script>
      document.querySelector(".back").addEventListener("click", () => {
        location.href = "/";
      });
    </script>
  </body>
</html>
